<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    style="@style/DarkGrayStyle">

    <TextView
        android:id="@+id/homework_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Литература"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/homework_days_left_image"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_clock_red"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/homework_title"
        app:layout_constraintStart_toStartOf="@id/homework_title"/>

    <TextView
        android:id="@+id/homework_days_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 дня осталось"
        android:textColor="@color/red"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/homework_days_left_image"
        app:layout_constraintTop_toBottomOf="@id/homework_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homework_logo_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/LightLightGrayStyle"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/homework_title"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_books"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/homework_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Прочитать сцены 1.1-1.12 из произведения Мастер и маргарита"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/homework_days_left_text"
        app:layout_constraintStart_toStartOf="@id/homework_title"/>

    <ImageView
        android:id="@+id/homework_face_one_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_face_two"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/homework_details"
        app:layout_constraintStart_toStartOf="@id/homework_title" />

    <ImageView
        android:id="@+id/homework_face_two_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_face_three"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/homework_details"
        app:layout_constraintStart_toStartOf="@id/homework_face_one_image" />

</androidx.constraintlayout.widget.ConstraintLayout>