<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/light_light_gray">
    <item
        android:state_enabled="true">
        <ripple
            android:color="@color/light_light_gray">
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"/>
                    <stroke
                        android:width="@null"
                        android:color="@color/light_light_gray" />
                    <gradient
                        android:useLevel="true"
                        android:endColor="@color/light_light_gray"/>
                    <padding
                        android:left="@null"
                        android:top="@null"
                        android:right="@null"
                        android:bottom="@null" />
                    <size
                        android:width="60dp"
                        android:height="30dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>